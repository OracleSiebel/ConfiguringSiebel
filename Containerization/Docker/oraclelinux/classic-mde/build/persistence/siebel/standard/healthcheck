case "$containerMode" in

	SAI )
		if curl -k -m 3 --fail http://localhost:4431 ;
		then 
			exit 0
		else
			exit 1 
		fi
	;;
	CGW | SES )
		if curl -k -m 3 --fail http://localhost:4431;
		then 
			exit 0
		else
			exit 1 
		fi
	;;
	*)
		exit 0
	;;
esac
